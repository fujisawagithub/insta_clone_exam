<h1>favorite</h1>

<table>
  <thead>
    <tr>
      <th>投稿者</th>
      <th>Title</th>
      <th>Content</th>
      <th>Image</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @favorites.each do |favorite| %>
    <tr>
      <td><%= favorite.picture.user.name %></td>
      <td><%= favorite.picture.title %></td>
      <td><%= favorite.picture.content %></td>
      <td><%= image_tag favorite.picture.image.url %></td>
    </tr>
    <% end %>
  </tbody>
</table>

<br>
<%= link_to 'New Picture', new_picture_path %>
<%= link_to 'Back', pictures_path %>